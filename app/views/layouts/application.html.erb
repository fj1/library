<!DOCTYPE html>
<html>
<head>
  <title>dataBEAST</title>
  <!-- google fonts -->
  <link href='http://fonts.googleapis.com/css?family=Raleway:400,600' rel='stylesheet' type='text/css'>
  <!-- Foundation -->
  <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/foundation/5.3.1/css/foundation.min.css"/>
  <!-- DataTables CSS -->
  <link rel="stylesheet" type="text/css" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

  <body>

    <!-- navbar -->
    <div class="row">
      <div class="small-12 large-12 columns navbar">
        <!-- logo -->
        <span class="logo">data<img class="kitten" src="assets/kitten.jpg"/><b>BEAST</b></span>    
        <!-- dropdown nav -->
        <a href="#" data-dropdown="drop1" class="button dropdown">I want to...</a><br>
        <ul id="drop1" class="f-dropdown" data-dropdown-content>
          <li><a href="#">View My Books</a></li>
          <li><a href="#">View My CDs</a></li>
          <li><a href="#">View My DVDs</a></li>
          <li><a href="#">View My Video Games</a></li>
          <li><a href="#">Create a New Item</a></li>
          <li><a href="#">Edit an Item</a></li>
          <li><a href="#">Delete an Item</a></li>
        </ul>

      </div>
    </div>

    <!-- yield -->
    <%= yield %>

    <!-- jQuery -->
    <!-- NOT NECESSARY <script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>   -->

    <!-- DataTables -->
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.js"></script>

    <!-- initializing DataTables and Foundation -->
    <script type="text/javascript">
      $(document).ready( function () {
        $('#table_id').DataTable();
      });

      $('.dropdown').on('click', function(){
        console.log("i've been clicked");
      })

      $(document).foundation({
        dropdown: {
          // specify the class used for active dropdowns
          active_class: 'open'
        },
        tab: {
          callback : function (tab) {
            console.log(tab);
          }
        }
      });
    </script>

  </body>
</html>








